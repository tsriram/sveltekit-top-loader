{
	"name": "sveltekit-top-loader",
	"version": "0.1.0",
	"license": "MIT",
	"author": {
		"name": "Sriram Thiagarajan",
		"email": "sri.sjc@gmail.com",
		"url": "https://x.com/tsriram"
	},
	"homepage": "https://github.com/tsriram/sveltekit-top-loader",
	"bugs": {
		"url": "https://github.com/tsriram/sveltekit-top-loader/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"release": "npx changeset publish"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0 || ^4.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^8.56.7",
		"@types/nprogress": "^0.2.3",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.1.9",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.4.1",
		"typescript": "^5.5.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.0",
		"vitest": "^1.2.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@changesets/cli": "^2.27.7",
		"nprogress": "^0.2.0"
	},
	"packageManager": "pnpm@9.12.3",
	"keywords": [
		"Svelte",
		"SvelteKit",
		"SvelteKit Top Loader",
		"Nprogress",
		"Top Loading Bar",
		"Progressbar"
	]
}